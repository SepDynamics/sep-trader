{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Development Container",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.dev.yml", "up", "-d"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Stop Development Container",
            "type": "shell",
            "command": "docker-compose",
            "args": ["-f", "docker-compose.dev.yml", "down"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Build in Container",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "sep_build_env",
                "bash",
                "-c",
                "cd /workspace && ./build.sh --no-docker"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": "Start Development Container",
            "problemMatcher": [
                "$gcc-11"
            ]
        },
        {
            "label": "Container Terminal",
            "type": "shell",
            "command": "docker",
            "args": [
                "exec",
                "-it",
                "sep_build_env",
                "bash"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "new"
            },
            "dependsOn": "Start Development Container",
            "problemMatcher": []
        }
    ]
}
