{
    "version": "0.2.0",
    "configurations": [
        // ===== SEP Engine Configurations =====
        {
            "name": "SEP: Run Engine",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/sep_engine",
            "args": [
                "--config",
                "${workspaceFolder}/config/default.json"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build"
        },
        {
            "name": "SEP: Debug Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/sep_tests",
            "args": [
                "--gtest_break_on_failure",
                "--gtest_filter=${input:testFilter}",
                "--gtest_color=yes"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build"
        },
        // ===== CUDA Debugging =====
        {
            "name": "SEP: CUDA Debug",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/sep_engine",
            "args": [
                "--config",
                "${workspaceFolder}/config/default.json"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "Build"
        },
        // ===== Extension Development =====
        {
            "name": "Extension: Run",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}/src",
                "--disable-extensions"
            ],
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "watch",
            "env": {
                "NODE_ENV": "development",
                "VSCODE_DEBUG_MODE": "true"
            },
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "presentation": {
                "hidden": false,
                "group": "extension",
                "order": 1
            }
        },
        // ===== Compound Configurations =====
        {
            "name": "SEP: Full Stack",
            "type": "node",
            "request": "launch",
            "presentation": {
                "hidden": false,
                "group": "compound",
                "order": 1
            }
        }
    ],
    // ===== Input Variables =====
    "inputs": [
        {
            "id": "testFilter",
            "type": "promptString",
            "description": "GTest filter pattern (e.g., PatternTest.*)",
            "default": "*"
        }
    ]
}