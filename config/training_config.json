{
  "training_coordinator": {
    "system_name": "SEP Professional Training Coordinator",
    "version": "2.0",
    "cuda_enabled": true,
    "parallel_training": true,
    "max_concurrent_pairs": 4
  },
  
  "training_modes": {
    "quick": {
      "iterations": 100,
      "cuda_batch_size": 512,
      "optimization_passes": 2,
      "validation_samples": 1000
    },
    "full": {
      "iterations": 1000,
      "cuda_batch_size": 1024,
      "optimization_passes": 5,
      "validation_samples": 5000
    },
    "live_tune": {
      "iterations": 50,
      "cuda_batch_size": 256,
      "optimization_passes": 1,
      "validation_samples": 500,
      "realtime_feedback": true
    }
  },
  
  "pattern_quality_thresholds": {
    "high_quality": 70.0,
    "medium_quality": 60.0,
    "minimum_acceptable": 50.0,
    "retrain_threshold": 55.0
  },
  
  "remote_trader": {
    "default_host": "100.85.55.105",
    "default_port": 8080,
    "api_version": "v1",
    "sync_interval_seconds": 300,
    "connection_timeout_seconds": 30,
    "retry_attempts": 3,
    "ssl_verify": false,
    "auth_token_file": "/sep/config/remote_auth.token"
  },
  
  "live_tuning": {
    "enabled": true,
    "tuning_interval_minutes": 15,
    "parameter_adjustment_step": 0.01,
    "max_parameter_deviation": 0.1,
    "performance_window_hours": 24,
    "auto_rollback_threshold": 5.0,
    "parameters_to_tune": [
      "stability_weight",
      "coherence_weight", 
      "entropy_weight",
      "confidence_threshold",
      "coherence_threshold"
    ]
  },
  
  "cuda_optimization": {
    "device_id": 0,
    "memory_pool_size_mb": 2048,
    "streams": 4,
    "block_size": 256,
    "shared_memory_kb": 48,
    "use_tensor_cores": true,
    "fp16_training": false
  },
  
  "cache_management": {
    "auto_cleanup_days": 30,
    "cache_size_limit_gb": 50,
    "compression_level": 6,
    "backup_old_data": true,
    "backup_directory": "/sep/cache/backups"
  },
  
  "system_monitoring": {
    "health_check_interval_seconds": 60,
    "performance_logging": true,
    "memory_monitoring": true,
    "gpu_monitoring": true,
    "log_directory": "/sep/logs/training",
    "log_rotation_days": 7,
    "alert_thresholds": {
      "memory_usage_percent": 85,
      "gpu_memory_percent": 90,
      "training_failure_rate": 10
    }
  },
  
  "distributed_processing": {
    "contribution_mode": "automatic",
    "pattern_sharing": true,
    "parameter_exchange": true,
    "peer_discovery": true,
    "mesh_network": true,
    "contribution_api": {
      "enabled": true,
      "port": 8081,
      "max_connections": 10,
      "rate_limit_per_minute": 100
    }
  }
}
