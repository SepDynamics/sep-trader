# SEP Trading System - Frontend Environment Configuration
# ==============================================================
# Production configuration for mxbikes.xyz remote server

# =================================================================
# API ENDPOINTS - REMOTE SERVER
# =================================================================

# Backend API endpoint (mxbikes.xyz server)
REACT_APP_API_URL=https://mxbikes.xyz/api
REACT_APP_WS_URL=wss://mxbikes.xyz/ws

# Legacy API base URL for compatibility
REACT_APP_API_BASE_URL=https://mxbikes.xyz/api/v1
REACT_APP_WS_BASE_URL=wss://mxbikes.xyz/ws

# Database health endpoints
REACT_APP_DB_HEALTH_ENDPOINT=/health/database

# =================================================================
# VALKEY/REDIS INTEGRATION  
# =================================================================

# Real-time data stream endpoints
REACT_APP_VALKEY_WS_URL=wss://mxbikes.xyz/valkey/stream
REACT_APP_REDIS_HEALTH_ENDPOINT=/health/valkey

# =================================================================
# TRADING CONFIGURATION
# =================================================================

# Trading environment
REACT_APP_OANDA_ENVIRONMENT=practice
REACT_APP_TRADING_MODE=live

# Market data refresh intervals
REACT_APP_MARKET_DATA_REFRESH_INTERVAL=1000
REACT_APP_CHART_UPDATE_INTERVAL=500

# =================================================================
# UI/UX CONFIGURATION
# =================================================================

# Application branding
REACT_APP_APPLICATION_NAME=SEP Professional Trading System
REACT_APP_VERSION=4.1.0
REACT_APP_ENVIRONMENT=production

# Theme configuration
REACT_APP_DEFAULT_THEME=dark
REACT_APP_ENABLE_THEME_SWITCHING=true

# =================================================================
# PERFORMANCE MONITORING
# =================================================================

# Enable real-time monitoring
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true
REACT_APP_LOG_LEVEL=info

# =================================================================
# WEBSOCKET CONFIGURATION
# =================================================================

# Real-time data connection settings
REACT_APP_WS_RECONNECT_INTERVAL=3000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# =================================================================
# SECURITY CONFIGURATION
# =================================================================

# CORS and security settings
REACT_APP_CORS_ENABLED=true
REACT_APP_CSP_ENABLED=true

# Authentication timeouts
REACT_APP_JWT_EXPIRY_TIME=3600000
REACT_APP_SESSION_TIMEOUT=1800000

# =================================================================
# FEATURE FLAGS
# =================================================================

# Trading features for production
REACT_APP_ENABLE_LIVE_TRADING=true
REACT_APP_ENABLE_BACKTESTING=true
REACT_APP_ENABLE_PORTFOLIO_ANALYTICS=true

# Show real-time system status
REACT_APP_SHOW_MIGRATION_STATUS=true
REACT_APP_SHOW_DB_STATUS=true

# =================================================================
# CACHE CONFIGURATION
# =================================================================

# Browser and data caching
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=60000

# Persist user settings
REACT_APP_PERSIST_USER_PREFERENCES=true
REACT_APP_PERSIST_CHART_SETTINGS=true

# =================================================================
# PRODUCTION BUILD SETTINGS
# =================================================================

# Production optimizations
GENERATE_SOURCEMAP=false
FAST_REFRESH=false
ANALYZE=false