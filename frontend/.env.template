# SEP Trading System - Frontend Environment Configuration Template
# ==============================================================
# 
# This template provides the required environment variables for the
# frontend application to connect to the DigitalOcean PostgreSQL backend.
#
# Instructions:
# 1. Copy this file to .env
# 2. Replace all placeholder values with your actual configuration
# 3. Ensure .env is added to your .gitignore file
# 4. Restart the development server after making changes
#
# Security Note: NEVER commit the actual .env file to version control

# =================================================================
# DATABASE CONNECTION (READ-ONLY FOR FRONTEND)
# =================================================================

# Database API Endpoint (Backend service URL, not direct DB connection)
REACT_APP_API_BASE_URL=http://localhost:8000/api/v1
REACT_APP_WS_BASE_URL=ws://localhost:8000/ws

# Database Connection Status Endpoint
REACT_APP_DB_HEALTH_ENDPOINT=/health/database

# =================================================================
# DIGITALOCEAN POSTGRESQL METADATA
# =================================================================

# Display information (for admin dashboard)
REACT_APP_DB_PROVIDER=DigitalOcean
REACT_APP_DB_REGION=nyc1
REACT_APP_DB_VERSION=15

# SSL/TLS Status Display
REACT_APP_DB_SSL_ENABLED=true
REACT_APP_DB_SSL_MODE=require

# =================================================================
# TRADING CONFIGURATION
# =================================================================

# OANDA Integration Display
REACT_APP_OANDA_ENVIRONMENT=practice

# Market Data Configuration
REACT_APP_MARKET_DATA_REFRESH_INTERVAL=5000
REACT_APP_CHART_UPDATE_INTERVAL=1000

# =================================================================
# UI/UX CONFIGURATION
# =================================================================

# Application Branding
REACT_APP_APPLICATION_NAME=SEP Trading System
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development

# Theme Configuration
REACT_APP_DEFAULT_THEME=dark
REACT_APP_ENABLE_THEME_SWITCHING=true

# =================================================================
# DEVELOPMENT CONFIGURATION
# =================================================================

# Development Features
REACT_APP_DEBUG_MODE=false
REACT_APP_ENABLE_REDUX_DEVTOOLS=true
REACT_APP_SHOW_DB_STATUS=true

# Performance Monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=false
REACT_APP_LOG_LEVEL=warn

# =================================================================
# SECURITY CONFIGURATION
# =================================================================

# CORS Configuration (for development)
REACT_APP_CORS_ENABLED=true

# Content Security Policy
REACT_APP_CSP_ENABLED=false

# Authentication
REACT_APP_JWT_EXPIRY_TIME=3600000
REACT_APP_SESSION_TIMEOUT=1800000

# =================================================================
# FEATURE FLAGS
# =================================================================

# Database Migration Status
REACT_APP_SHOW_MIGRATION_STATUS=true
REACT_APP_ENABLE_DB_MIGRATION_UI=false

# Trading Features
REACT_APP_ENABLE_LIVE_TRADING=false
REACT_APP_ENABLE_BACKTESTING=true
REACT_APP_ENABLE_PORTFOLIO_ANALYTICS=true

# =================================================================
# MONITORING AND ANALYTICS
# =================================================================

# Error Tracking
REACT_APP_SENTRY_DSN=
REACT_APP_ENABLE_ERROR_TRACKING=false

# Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_ENABLE_ANALYTICS=false

# =================================================================
# WEBSOCKET CONFIGURATION
# =================================================================

# Real-time Data
REACT_APP_WS_RECONNECT_INTERVAL=5000
REACT_APP_WS_MAX_RECONNECT_ATTEMPTS=10
REACT_APP_WS_HEARTBEAT_INTERVAL=30000

# =================================================================
# CACHE CONFIGURATION
# =================================================================

# Browser Cache
REACT_APP_CACHE_ENABLED=true
REACT_APP_CACHE_DURATION=300000

# Local Storage
REACT_APP_PERSIST_USER_PREFERENCES=true
REACT_APP_PERSIST_CHART_SETTINGS=true

# =================================================================
# DEVELOPMENT OVERRIDES
# =================================================================

# Hot Reloading
FAST_REFRESH=true

# Source Maps
GENERATE_SOURCEMAP=true

# Bundle Analysis (set to true to analyze bundle size)
ANALYZE=false

# =================================================================
# PRODUCTION OVERRIDES (Comment out for development)
# =================================================================

# Production API endpoints
# REACT_APP_API_BASE_URL=https://your-production-api.com/api/v1
# REACT_APP_WS_BASE_URL=wss://your-production-api.com/ws

# Production security settings
# REACT_APP_DEBUG_MODE=false
# REACT_APP_ENABLE_REDUX_DEVTOOLS=false
# GENERATE_SOURCEMAP=false
